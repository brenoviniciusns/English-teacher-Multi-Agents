# Application Settings
APP_NAME="English Learning Multi-Agent App"
APP_VERSION="0.1.0"
DEBUG=True
ENVIRONMENT=development

# API Settings
API_V1_PREFIX=/api/v1

# Azure OpenAI Configuration
# Get these from Azure Portal: https://portal.azure.com
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_MAX_TOKENS=1000
AZURE_OPENAI_TEMPERATURE=0.7

# Azure Speech Services Configuration
# Get these from Azure Portal: https://portal.azure.com
AZURE_SPEECH_KEY=your-azure-speech-key-here
AZURE_SPEECH_REGION=eastus
AZURE_SPEECH_LANGUAGE=en-US
AZURE_SPEECH_VOICE_AMERICAN=en-US-JennyNeural
AZURE_SPEECH_VOICE_AMERICAN_MALE=en-US-GuyNeural
AZURE_SPEECH_VOICE_BRITISH=en-GB-SoniaNeural
AZURE_SPEECH_VOICE_BRITISH_MALE=en-GB-RyanNeural

# Azure Cosmos DB Configuration
# Get these from Azure Portal: https://portal.azure.com
COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-db-primary-key-here
COSMOS_DB_DATABASE_NAME=english_learning_db

# Cosmos DB Container Names
COSMOS_DB_USERS_CONTAINER=users
COSMOS_DB_VOCABULARY_PROGRESS_CONTAINER=vocabulary_progress
COSMOS_DB_GRAMMAR_PROGRESS_CONTAINER=grammar_progress
COSMOS_DB_PRONUNCIATION_PROGRESS_CONTAINER=pronunciation_progress
COSMOS_DB_ACTIVITIES_CONTAINER=activities
COSMOS_DB_SPEAKING_SESSIONS_CONTAINER=speaking_sessions
COSMOS_DB_SCHEDULE_CONTAINER=schedule

# Redis Cache (Optional - Enable in production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
USE_REDIS=False

# JWT Authentication
# Generate a secure key with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# SRS (Spaced Repetition System) Settings
SRS_INITIAL_INTERVAL_DAYS=1
SRS_SECOND_INTERVAL_DAYS=6
SRS_INITIAL_EASE_FACTOR=2.5
SRS_MIN_EASE_FACTOR=1.3
SRS_LOW_FREQUENCY_THRESHOLD_DAYS=7
SRS_LOW_ACCURACY_THRESHOLD=80

# Learning Levels
BEGINNER_VOCABULARY_LIMIT=2000
BEGINNER_PRONUNCIATION_ACCURACY_TARGET=85
INTERMEDIATE_UPGRADE_THRESHOLD=85

# Assessment Settings
INITIAL_ASSESSMENT_VOCABULARY_COUNT=20
INITIAL_ASSESSMENT_GRAMMAR_COUNT=5
INITIAL_ASSESSMENT_PRONUNCIATION_COUNT=5
CONTINUOUS_ASSESSMENT_FREQUENCY=5

# Speaking/Conversation Settings
SPEAKING_SESSION_MIN_TURNS=5
SPEAKING_SESSION_MAX_TURNS=10

# WebSocket Settings
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_TIMEOUT=300

# File Upload Settings
MAX_AUDIO_FILE_SIZE_MB=10

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_OPENAI_PER_HOUR=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
